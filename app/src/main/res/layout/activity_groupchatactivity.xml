<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".extraactivities.Groupchatactivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatrecycle"
        android:layout_width="411dp"
        android:layout_height="669dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <EditText
        android:id="@+id/messaget"
        android:layout_width="324dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/type"
        android:ems="10"
        android:hint="Type message.."
        android:inputType="textMultiLine"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/floa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatrecycle" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="11dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/messaget"
        app:layout_constraintTop_toBottomOf="@+id/chatrecycle"
        app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />
</androidx.constraintlayout.widget.ConstraintLayout>