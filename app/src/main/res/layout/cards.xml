<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custques"
            android:layout_width="392dp"
            android:layout_height="45dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:textColor="#FAF0F0"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView"
            android:layout_width="351dp"
            android:layout_height="84dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/customforsingle"
            android:hint="Type your question"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custques" />

        <Button
            android:id="@+id/button2"
            android:layout_width="204dp"
            android:layout_height="48dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="78dp"
            android:background="@drawable/customforsingle"
            android:backgroundTint="#9F1414"
            android:text="Add"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multiAutoCompleteTextView" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="161dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="171dp"
            android:background="@drawable/customforsingle"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginStart="262dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="67dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Swipe for next"
            android:textColor="#EFEBEB"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>